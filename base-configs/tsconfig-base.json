{
  "compilerOptions": {
    "declaration": false,
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2019", "dom", "es2020.string"],

    "allowJs": true,
    "checkJs": false,
    "jsx": "preserve",
    "noEmit": true,

    "isolatedModules": true,
    "strict": true,

    "skipLibCheck": true,

    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "resolveJsonModule" : true
  }
}
